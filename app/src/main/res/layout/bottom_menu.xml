<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <!--<View
         android:id="@+id/layout_divider"
         android:layout_width="match_parent"
         android:layout_height="4dp"
         android:background="@drawable/bottom_bar_divider"
         />-->

    <LinearLayout
        android:id="@+id/layout_group_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <org.huzaifa.ikleen.bottommenu.BottomMenuItem
            android:id="@+id/menu_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:normalImage="@drawable/home"
            app:normalTitleColor="#000"
            app:selectedImage="@drawable/home_selected"
            app:title="Home" />

        <org.huzaifa.ikleen.bottommenu.BottomMenuItem
            android:id="@+id/menu_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:normalImage="@drawable/machine"
            app:selectedImage="@drawable/machine_selected"
            app:title="My Orders" />

        <org.huzaifa.ikleen.bottommenu.BottomMenuItem
            android:id="@+id/menu_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:normalImage="@drawable/login"
            app:selectedImage="@drawable/login_selected"
            app:title="Profile" />

        <org.huzaifa.ikleen.bottommenu.BottomMenuItem
            android:id="@+id/menu_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:normalImage="@drawable/prices"
            app:selectedImage="@drawable/prices_selected"
            app:title="Prices" />

        <org.huzaifa.ikleen.bottommenu.BottomMenuItem
            android:id="@+id/menu_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:normalImage="@drawable/contact"
            app:selectedImage="@drawable/contact_selected"
            app:title="Contact" />
    </LinearLayout>
</RelativeLayout>